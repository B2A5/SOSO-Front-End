//tools/typescript-config/tsconfig.base.json
// 모든 TypeScript 프로젝트에서 공통으로 사용할 설정을 정의합니다.
// 각 프로젝트는 이 파일을 상속받아 추가 설정을 할 수 있습니다.

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    // "esModuleInterop": true,// ES 모듈과 CommonJS 모듈 간의 호환성을 위해 사용합니다.
    // "resolveJsonModule": true, // JSON 파일을 모듈로 가져올 수 있게 합니다.
    "incremental": true // 증분 컴파일을 활성화하여 빌드 시간을 단축합니다.
  }
}
